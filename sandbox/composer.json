{
    "name": "ananiaslitz/hyperf-avro-sandbox",
    "description": "Sandbox for validating hyperf-avro against a real Kafka + Schema Registry",
    "type": "project",
    "repositories": [
        {
            "type": "path",
            "url": "./hyperf-avro",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": ">=8.1",
        "ananiaslitz/hyperf-avro": "*",
        "hyperf/contract": "^3.1",
        "longlang/phpkafka": "^1.2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sandbox\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}